<% if signed_in? %>

	<table class="front" summary="For signed-in users">
		<tr>
			<td class="main">
				<h1 class="micropost">What's up?</h1>
				<%= render 'shared/micropost_form' %>
				<%= render 'shared/feed' %>
			</td>
			<td class="sidebar round">
				<%= render 'shared/user_info' %>
				<%= render 'shared/stats' %>
			</td>
		</tr>
	</table>

<% else %>

	<h1>Dobrodošli!</h1>
	<p>
		balon.heroku.com Vam omogućuje da doznate što se trenutno događa kod osoba do kojih Vam je stalo.
	</p>

	<%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<!--	<%= link_to "Sign up now!", signup_path, :class => "btn signup-btn" %>-->

<% end %>


